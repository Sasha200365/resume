<main>
  <div class="row"> 
    <div class="col-8 ms-0">
      
      {{#with formBlock}}
          <h2 class='mb-3' >{{header}}</h2>
            {{#with rating}}
              {{title}}: {{value}}
            {{/with}}

          <div class="nav nav-tabs mt-3">
            {{#with actionBlock}}
                {{#each tabs}}
                  <div class="nav-item">
                    <a {{#if isActive}}href="#" class="nav-link active mx-3 "{{else}} href="#" class="nav-link mx-2" {{/if}}>{{text}}</a>
                  </div>
                {{/each}} 
              {{/with}} 
          </div>

          <hr class="my-5">

          <div class="card col-12 p-3">
            {{#with actionBlock.report}}
              <p>{{title}}</p>
              {{#with button}}
                <a class="btn btn-secondary col-4 p-1" href="{{link}}">{{text}}</a>
              {{/with}}
            {{/with}}
          </div>

            <hr class="my-5">

            {{#with feedbackBlock}}
              <h3 class="mb-5">{{title}}</h3>
              {{#each buttons}}              
                <a {{#if isWarning}} class="btn btn-warning text-white px-1" {{/if}}
                {{#if isSuccess}} class="btn btn-success px-1 mx-2"  {{/if}}
                {{#if isDanger}} class="btn btn-danger px-1" {{/if}} href="{{link}}">
                {{text}}</a>            
              {{/each}}
            {{/with}}
      {{/with}}
    </div>

      <div class="col-4 ms-0 ">
        <div class="card mb-3 p-2">
          {{#with formBlock.goodsInfo}}
            <img src="{{photo}}"></img>
            <h5 class='mt-3' >{{name}}</h5>            
          {{/with}}
        </div>
      
        <div class="card p-2">
          {{#with formBlock.goodsInfo}}
            <h5>{{price}}</h5>
            {{#if inMarket}} Є в наявності {{/if}}
            <div class="col-12">
              {{#each buttons}}
                <a {{#if isPrimary}} class="btn btn-primary text-start mt-2" href="{{link}}"{{/if}}
                  {{#if isSecondary}} class="btn btn-secondary text-start my-2" href="{{link}}"{{/if}}>
                  {{text}}
                </a>
              {{/each}}
            </div>
          {{/with}}
        </div>
        
        <div class="card p-2 mt-3">
          {{#with formBlock.goodsInfo}}
            <div>
              {{seller.title}}: <b>{{seller.value}}</b>
            </div>
          {{/with}}
        </div>
      </div>
  </div>

  <hr class="my-5">
   
  {{#each reviewList}}
   {{> reviewItem}}
  {{/each}}

{{> shopaction}}

</main>