{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
  {{#with main}}

    <main>

      <section>
        {{> title data="Work history"  big=true}}
        <div>
          <ul>
            {{#each works}}
              <li>
                <div>{{position}}</div>
                <div class="my-3">{{duration.from}} - {{#if duration.to}} {{duration.to}} {{else}} (працюю дотепер) {{/if}}</div>
                
                 {{!-- <div>{{> link text=company.name href=company.url blank=true isLine=false noline=true}}</div> --}}
                 <b>{{#unless company.url}} {{company.name}} {{/unless}}</b>
                
                <div class="my-4"><strong >Projects ({{projectAmount}})</strong></div>
                <ul>
                  {{#each projects}}
                    <li>
                      <div>{{> link text=name href=url blank=true isLine=false noline=true}}</div>
                      <p>{{about}}</p>
                      <div><em>Project stacks </em></div>
                      <div class="my-3">({{stackAmoGnt}})</div>
                
                      {{#each stack}}
                        <li>
                          {{name}}                          
                        </li>
                      {{/each}}
                <div class="my-3"><em>Project awards </em></div>
                      {{#each awards}}
                        <li>
                          {{name}}                         
                        </li>
                      {{/each}}

                    </li>
                  {{/each}}
                </ul>
                
              </li>
            {{/each}}
          </ul>
        </div>
      </section>

      
    </main>
  {{/with}}

</div>

