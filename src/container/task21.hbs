<main>
  <div class='card'>
    <div class='card-body'>
      <div class='card'>
        <div class='card-body'>
          <h1>{{heading.main.title}}</h1>
          <p>{{heading.main.text}}</p>
          <p class='btn btn-primary'>
            {{heading.main.button_text.solid}}
          </p>
          <br />
          <p class='btn btn-outline-primary'>
            {{heading.main.button_text.outline}}
          </p>
        </div>
      </div>

      <br />

      <div class='card'>
        <div class='card-body'>
          <h2>{{heading.second.title}}</h2>
          <p>{{heading.second.text}}</p>
          <p class='btn btn-secondary'>
            {{heading.second.button_text.solid}}
          </p>
          <br />
          <p class='btn btn-outline-secondary'>
            {{heading.second.button_text.outline}}
          </p>
        </div>
      </div>
    </div>
  </div>
  <br />
  <div class='card'>
        <div class='card-body'>
          <h3>{{heading.subblock.title}}</h3>
          <p>{{heading.subblock.text}}</p>
          <p class='btn btn-secondary'>
            {{heading.subblock.button_text.solid}}
          </p>
          <br />
          <p class='btn btn-outline-secondary'>
            {{heading.subblock.button_text.outline}}
          </p>
        </div>
      </div>
    </div>
  </div>
  <br />

  <div class='card'>
    <div class='card-body'>
      <div class='display-1'>
        {{nested_display.title}}
      </div>
      <br>
      <div class='card'>
        <div class='card-body'>
          <div class='display-4'>
            {{nested_display.children_display.title}}
          </div>
          <p>{{nested_display.children_display.text}}</p>
          <p class='btn btn-outline-warning'>
            {{nested_display.children_display.button.text}}</p>
        </div>
      </div>
      <br />
      <h6>{{nested_display.header_text}}</h6>
      <br />
      <p class='btn btn-info'>
       {{nested_display.button.text}}</p>

    </div>
  </div>

  <br />
  <br />

  <div class='card'>
    <div class='card-body'>
      <p class='text-uppercase'>{{paragraph.title}}</p>
      <br />
      <p>{{paragraph.text}}</p>
      <br />
      <a href={{paragraph.button.url}} class='btn btn-link'>{{paragraph.button.text}}</a>
      <br />
      <br />
      <div class='card'>
        <div class='card-body'>
          {{#each paragraph.list_name}}
            <ul>            
              <li>
                <a href={{url}} class='btn btn-link'>{{text}}</a>
              </li>
            </ul>
          {{/each}}

        </div>
      </div>
    </div>
  </div>

</main>