<div class="row">
        <div class="col-4">
        <div>{{number}}</div>
        <h6>{{status}}</h6>
        </div>

        <div class="col-2"> 
          {{#with amount}}
            <div>{{title}}</div>
            <h5>{{value}}</h5>
          {{/with}}
        </div>

        <div class="col-4"> 
          {{#each images}}    
            <img src='{{this}}'>      
          {{/each}}
        </div>

        <div class="col-2">
          {{#with button}}
            <a {{#if isPrimary}} class="btn btn-primary btn-sm mt-2" href="{{link}}{{/if}}">{{text}}</a>
          {{/with}}
        </div>
      <hr class="my-2">
    </div>